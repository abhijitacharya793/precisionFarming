<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.profileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar_layout_profile"

        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/profile_toolbar"
            android:background="@android:color/white"
            >

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_fragment_username"
                android:text="USERNAME"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/option_view"
                android:src="@drawable/options"
                android:layout_alignParentEnd="true"
                />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view"
        android:layout_below="@+id/app_bar_layout_profile"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:id="@+id/profile_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_bar"
                android:orientation="horizontal"
                >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/profile_image"
                android:layout_marginLeft="20dp"
                android:src="@drawable/profile"

                >
            </de.hdodenhof.circleimageview.CircleImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:orientation="vertical" >

                        <TableLayout
                            android:id="@+id/profile_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="bottom"
                                >

                                <TextView
                                    android:id="@+id/total_posts"
                                    android:layout_width="61dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="1"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/total_followers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/total_following"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="3"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:text="Posts  "
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_column="2"
                                    android:text="Followers "
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_column="3"
                                    android:text="Following "
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />

                            </TableRow>
                        </TableLayout>


                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edit Profile"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:fadingEdge="horizontal"
                            android:id="@+id/btn_edit_profile">

                        </Button>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            //linearlayout
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:id="@+id/profile_username">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full user name"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:id="@+id/full_name_label"
                />

                <TextView
                    android:id="@+id/profile_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Bio"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"

                    />
            </LinearLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_white_background">
                <ImageView
                    android:layout_width="1dp"
                    android:id="@+id/image_grid_view_btn"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grid_white"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"

                    />
                <ImageView
                    android:layout_width="1dp"
                    android:id="@+id/image_save_btn"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/save_large_icon_white"
                    style="?android:attr/buttonBarButtonStyle"
                    />





            </LinearLayout>-->


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                />



        </LinearLayout>



    </ScrollView>
</RelativeLayout>