<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="#FFFFFF">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/phasal_logo_su"
        android:src="@drawable/phasal_header_white">
    </ImageView>

    <EditText
        android:id="@+id/enter_full_name_su"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/phasal_logo_su"
        android:layout_marginTop="-65dp"
        android:background="@drawable/button_white_background"
        android:hint="Full name ..."
        android:inputType="text"
        android:shadowColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF">

    </EditText>


    <EditText
        android:id="@+id/enter_user_name_su"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/enter_full_name_su"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_white_background"
        android:hint="User  name ..."
        android:shadowColor="@color/colorPrimary"
        android:textAlignment="center"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF">

    </EditText>
    <EditText
        android:id="@+id/enter_email_su"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/enter_user_name_su"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_white_background"
        android:hint="Email ..."
        android:inputType="textEmailAddress"
        android:shadowColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF">

    </EditText>
    <EditText
        android:id="@+id/enter_password_su"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/enter_email_su"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_white_background"
        android:hint="password ..."
        android:inputType="textVisiblePassword"
        android:shadowColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF">

    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_password_su"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Sign up"
        android:background="@color/colorSecondary"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/sign_up_btn_su"
        >
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="already have an account"
        android:background="@color/colorSecondaryVariant"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/login_btn_su" />

</RelativeLayout>