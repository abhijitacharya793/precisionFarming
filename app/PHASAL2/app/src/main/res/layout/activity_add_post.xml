<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity"
    android:background="#FFFFFF">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar_layout_profile_settings"

        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/likes_toolbar"
            android:background="@android:color/white"
            >

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:id="@+id/close_add_post_btn"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/close_phasal">
                </ImageView>

                <TextView
                    android:layout_width="334dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Add Post"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_toStartOf="@+id/save_profile_btn"
                    android:layout_marginStart="9dp"
                    android:layout_toEndOf="@+id/close_profile_btn">

                </TextView>

                <ImageView
                    android:id="@+id/save_post_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/save_edited_info_phasal">

                </ImageView>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/app_bar_layout_profile_settings"

        >
        <ImageView
            android:id="@+id/View_post_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/button_white_background"

            ></ImageView>
        <EditText
            android:id="@+id/post_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Image description"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >
        </EditText>

    </LinearLayout>


</RelativeLayout>