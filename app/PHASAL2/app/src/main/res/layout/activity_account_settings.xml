<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AccountSettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar_layout_profile_settings"

        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/likes_toolbar"
            android:background="@android:color/white"
            >

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:id="@+id/close_profile_btn"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/close_phasal">
                </ImageView>

                <TextView
                    android:layout_width="334dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Edit Profile"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_toStartOf="@+id/save_profile_btn"
                    android:layout_marginStart="9dp"
                    android:layout_toEndOf="@+id/close_profile_btn">

                </TextView>

                <ImageView
                    android:id="@+id/save_profile_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/save_edited_info_phasal">

                </ImageView>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/app_bar_layout_profile_settings"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        android:id="@+id/profile_image_view_profile_image">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_image_view_profile_image"
        android:text="Change Image"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/change_profile_pic_btn"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/enter_full_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/change_profile_pic_btn"
        android:hint="Full Name ..."
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="15dp"
        android:shadowColor="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        >
    </EditText>
    <EditText
        android:id="@+id/enter_user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/enter_full_name"
        android:hint="User Name ..."
        android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
        android:layout_marginTop="15dp"
        android:shadowColor="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp">
    </EditText>
    <EditText
        android:id="@+id/enter_bio"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/enter_user_name"
        android:hint="Bio..."
        android:textColor="#FFFFFF"

        android:textColorHint="#FFFFFF"
        android:layout_marginTop="15dp"
        android:shadowColor="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp">
    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="Delete Account"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/delete_account_btn"
        >
    </Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_account_btn"
        android:layout_marginBottom="15dp"
        android:text="Logout Account"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/logout_account_btn"
        >
    </Button>

<Spinner
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_below="@id/enter_bio"
    android:layout_marginTop="15dp"
    android:background="@drawable/button_white_background"
    android:layout_marginLeft="50dp"
    android:layout_centerHorizontal="true"
android:id="@+id/Select_Region"
    />


</RelativeLayout>
